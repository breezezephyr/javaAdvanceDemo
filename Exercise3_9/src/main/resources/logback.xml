<?xml version="1.0"?>
<configuration>
    <!-- 控制台输出日志 -->
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <layout class="ch.qos.logback.classic.PatternLayout">
            <pattern>%msg%n</pattern>
        </layout>
    </appender>
    <!--这里指定logger name 是为jmx设置日志级别做铺垫 -->
    <root name="com.sean">
        <level value="DEBUG"/>
        <appender-ref ref="STDOUT"/>
    </root>
</configuration>